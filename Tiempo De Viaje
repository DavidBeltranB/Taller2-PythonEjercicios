total_minutos = 0
tiempo_viaje = 0

while tiempo_viaje != 0:

  tiempo_viaje = int(input("Ingrese el tiempo de viaje (en minutos) del tramo. Ingrese 0 para finalizar: "))
  
  if tiempo_viaje > 0:
  
    total_minutos += tiempo_viaje

horas = total_minutos // 60 

minutos = total_minutos % 60

print("Tiempo total de viaje:", horas, "horas :", minutos, "minutos")
